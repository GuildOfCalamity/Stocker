<UserControl
    x:Class="UpdateViewer.UpdateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:UpdateViewer.DataModels"
    xmlns:local="clr-namespace:UpdateViewer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:viewmodel="clr-namespace:UpdateViewer.ViewModels"
    x:Name="updateControl"
    FontSize="18"
    IsTabStop="False"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  Local control styler
        <Style x:Key="LogViewer" TargetType="{x:Type ItemsControl}">
            <Setter Property="FontFamily" Value="Myriad Pro" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <ScrollViewer CanContentScroll="True">
                            <ScrollViewer.Resources>
                                <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">20</sys:Double>
                            </ScrollViewer.Resources>
                            <ItemsPresenter />
                        </ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>-->
    </UserControl.Resources>
    <UserControl.Style>
        <Style>
            <Style.Triggers>
                <EventTrigger RoutedEvent="UserControl.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0.0"
                                To="1.0"
                                Duration="0:0:1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <DockPanel
        MinWidth="500"
        MinHeight="400"
        Margin="8"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid Background="{StaticResource updateViewBrush}">
            <!-- POSSIBLE VIEW SWICTHING SOLUTION
        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Visibility" Value="Collapsed" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=eViewState}" Value="{x:Static viewmodel:ViewState.MainView}">
                        <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
            -->
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="36" />
                <RowDefinition Height="200" />
                <RowDefinition Height="200" />
                <RowDefinition Height="230" />
                <RowDefinition Height="90" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="16*" />
            </Grid.ColumnDefinitions>

            <!--  Header Labels  -->
            <Grid
                Grid.Row="1"
                Grid.ColumnSpan="4"
                Width="Auto"
                VerticalAlignment="Center"
                IsHitTestVisible="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Margin" Value="5,0" />
                        <Setter Property="Foreground" Value="Gray" />
                        <Setter Property="FontWeight" Value="Normal" />
                    </Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="BorderBrush" Value="#252535" />
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                </Grid.Resources>
                <Border Grid.Column="0" CornerRadius="8">
                    <TextBlock Style="{StaticResource textItems}">Code</TextBlock>
                </Border>
                <Border Grid.Column="1" CornerRadius="8">
                    <TextBlock Style="{StaticResource textItems}">Name</TextBlock>
                </Border>
                <Border Grid.Column="2" CornerRadius="8">
                    <TextBlock Style="{StaticResource textItems}">Buy Qty</TextBlock>
                </Border>
                <Border Grid.Column="3" CornerRadius="8">
                    <TextBlock Style="{StaticResource textItems}">Buy Price</TextBlock>
                </Border>
                <Border Grid.Column="4" CornerRadius="8">
                    <TextBlock Style="{StaticResource textItems}">Buy Date</TextBlock>
                </Border>
                <Border Grid.Column="5" CornerRadius="8">
                    <TextBlock Style="{StaticResource textItems}">Sell Qty</TextBlock>
                </Border>
                <Border Grid.Column="6" CornerRadius="8">
                    <TextBlock Style="{StaticResource textItems}">Sell Price</TextBlock>
                </Border>
                <Border Grid.Column="7" CornerRadius="8">
                    <TextBlock Style="{StaticResource textItems}">Sell Date</TextBlock>
                </Border>
                <Border Grid.Column="8" CornerRadius="8">
                    <TextBlock Style="{StaticResource textItems}">Profit/Loss</TextBlock>
                </Border>
                <Border Grid.Column="9" CornerRadius="8">
                    <TextBlock Style="{StaticResource textItems}">DivAmt</TextBlock>
                </Border>
                <Border Grid.Column="10" CornerRadius="8">
                    <TextBlock Style="{StaticResource textItems}">DivPct</TextBlock>
                </Border>
            </Grid>

            <!--  ListView for stock data  -->
            <ListView
                x:Name="listEntries"
                Grid.Row="2"
                Grid.RowSpan="3"
                Grid.ColumnSpan="4"
                Background="Transparent"
                BorderBrush="#FF252535"
                BorderThickness="0"
                IsHitTestVisible="True"
                IsSynchronizedWithCurrentItem="True"
                IsTabStop="True"
                ItemsSource="{Binding Stocks}"
                LayoutUpdated="listEntries_LayoutUpdated"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                SelectedIndex="{Binding SelectedIdx, Mode=TwoWay, NotifyOnTargetUpdated=True}"
                SelectedItem="{Binding SelectedStock, Mode=TwoWay, NotifyOnTargetUpdated=True}"
                SelectionChanged="ListView_SelectionChanged"
                SelectionMode="Single"
                TabIndex="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Height" Value="36" />
                        <EventSetter Event="MouseLeftButtonUp" Handler="ListViewItem_MouseLeftButtonUp" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate DataType="data:Stock">
                        <Grid IsHitTestVisible="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource textShadow}"
                                Text="{Binding Path=Code}" />
                            <TextBlock
                                Grid.Column="1"
                                Style="{StaticResource textShadow}"
                                Text="{Binding Path=Name}" />
                            <TextBlock
                                Grid.Column="2"
                                Style="{StaticResource textShadow}"
                                Text="{Binding Path=BuyQty}" />
                            <TextBlock
                                Grid.Column="3"
                                Style="{StaticResource textShadow}"
                                Text="{Binding Path=BuyPrice}" />
                            <TextBlock
                                Grid.Column="4"
                                Style="{StaticResource textShadow}"
                                Text="{Binding Path=BuyDate, Converter={StaticResource dateToShort}}" />
                            <TextBlock
                                Grid.Column="5"
                                Style="{StaticResource textShadow}"
                                Text="{Binding Path=SellQty}" />
                            <TextBlock
                                Grid.Column="6"
                                Style="{StaticResource textShadow}"
                                Text="{Binding Path=SellPrice}" />
                            <TextBlock
                                Grid.Column="7"
                                Style="{StaticResource textShadow}"
                                Text="{Binding Path=SellDate, Converter={StaticResource dateToShort}}" />
                            <TextBlock
                                Grid.Column="8"
                                Foreground="{Binding Path=StockBrush, Converter={StaticResource stringToBrush}}"
                                Style="{StaticResource textShadow}"
                                Text="{Binding Path=Profit}" />
                            <TextBlock
                                Grid.Column="9"
                                Style="{StaticResource textShadow}"
                                Text="{Binding Path=DivAmt}" />
                            <TextBlock
                                Grid.Column="10"
                                Style="{StaticResource textShadow}"
                                Text="{Binding Path=DivPct}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
