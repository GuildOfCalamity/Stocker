            </ListView>

            <Border
                Grid.Row="0"
                Grid.ColumnSpan="4"
                BorderBrush="#353545"
                BorderThickness="3"
                CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60*" />
                        <ColumnDefinition Width="60*" />
                        <ColumnDefinition Width="60*" />
                        <ColumnDefinition Width="60*" />
                        <ColumnDefinition Width="60*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="24"
                        Style="{StaticResource textShadow}"
                        Text="{Binding UpdateTitle}"
                        TextWrapping="Wrap" />

                    <Grid Grid.Row="0" Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="110" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Row="0"
                            Grid.Column="2"
                            Width="90"
                            Height="30"
                            Margin="8"
                            HorizontalAlignment="Right"
                            Command="{Binding DataContext.CloseApp, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}, Mode=OneWay}"
                            CommandParameter="{Binding AllowClose}"
                            Content="Exit"
                            Style="{StaticResource hollowNormal}" />

                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="90"
                            Height="30"
                            Margin="8"
                            HorizontalAlignment="Center"
                            Command="{Binding DataContext.HideApp, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}, Mode=OneWay}"
                            CommandParameter="{Binding AllowHide}"
                            Content="Hide"
                            Style="{StaticResource hollowNormal}" />
                    </Grid>

                    <ComboBox
                        x:Name="cboSort"
                        Grid.Row="0"
                        Grid.Column="0"
                        Width="180"
                        Height="31"
                        Margin="30,0,0,0"
                        HorizontalAlignment="Right"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding SortMethods}"
                        SelectedItem="{Binding SelectedSort}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Placement="Mouse"
                                Visibility="{Binding cbTips, Converter={StaticResource boolToVisibility}}">
                                <ToolTip.Content>
                                    <GroupBox
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        Background="#252535"
                                        Header="Usage Tip">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Grid.Column="0"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                RenderOptions.BitmapScalingMode="Fant"
                                                Source="Icons\pointer.png" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Background="#252535"
                                                FontSize="16"
                                                Foreground="#999999"
                                                Text="This lets you sort the current view." />
                                        </Grid>
                                    </GroupBox>
                                </ToolTip.Content>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </ComboBox>

                    <ComboBox
                        x:Name="cboYear"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="180"
                        Height="31"
                        Margin="30,0,0,0"
                        HorizontalAlignment="Left"
                        ItemsSource="{Binding YearMethods}"
                        SelectedItem="{Binding SelectedYear}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Placement="Mouse"
                                Visibility="{Binding cbTips, Converter={StaticResource boolToVisibility}}">
                                <ToolTip.Content>
                                    <GroupBox
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        Background="#252535"
                                        Header="Usage Tip">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Grid.Column="0"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                RenderOptions.BitmapScalingMode="Fant"
                                                Source="Icons\pointer.png" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Background="#252535"
                                                FontSize="16"
                                                Foreground="#999999"
                                                Text="This selects the stock database to work with." />
                                        </Grid>
                                    </GroupBox>
                                </ToolTip.Content>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </ComboBox>

                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="3"
                        HorizontalAlignment="Left"
                        RenderOptions.BitmapScalingMode="Fant"
                        Source="Icons\app_small_clear.png">
                        <Image.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="270"
                                Opacity="0.7"
                                ShadowDepth="1"
                                Color="LightGray" />
                        </Image.Effect>
                    </Image>
                </Grid>
            </Border>
            <!--
        <ItemsControl
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            ItemsSource="{Binding LogEntries}"
            Style="{StaticResource LogViewer}" />-->
            <Border
                Grid.Row="5"
                Grid.ColumnSpan="4"
                BorderBrush="#353545"
                BorderThickness="3"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="30*" />
                    </Grid.ColumnDefinitions>

                    <!-- === Checkmark Testing ===
                <Path
                    Grid.Column="2"
                    Width="23"
                    Height="30"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Data="M8.625,0.5 C1.6875,10.5 2.6875,12.040001 1.5625,9.3525009 C0.4375,5.6650009 1.175,7.8525 0.5,8.6275"
                    StrokeThickness="3"
                    Visibility="Visible">
                    <Path.Stroke>
                        <SolidColorBrush Color="White" />
                    </Path.Stroke>
                </Path>
                    -->
                    <Button
                        Grid.Column="0"
                        Height="30"
                        Margin="10,0,10,0"
                        Command="{Binding DataContext.CheckCommand, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}, Mode=OneWay}"
                        CommandParameter="{Binding AllowClose}"
                        Content="{Binding CheckContext}"
                        IsEnabled="{Binding EnableCheck}"
                        Style="{StaticResource hollowNormal}"
                        Visibility="Collapsed" />

                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="150"
                        Height="40"
                        Margin="10,0,10,0"
                        Command="{Binding DataContext.SwitchViewEdit, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}, Mode=OneWay}"
                        CommandParameter="{x:Type viewmodel:MainViewModel}"
                        Content="Edit Stock"
                        IsEnabled="{Binding EnableEdit}"
                        Style="{StaticResource hollowNormal}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Placement="Mouse"
                                Visibility="{Binding cbTips, Converter={StaticResource boolToVisibility}}">
                                <ToolTip.Content>
                                    <GroupBox
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        Header="Usage Tip">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Grid.Column="0"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                RenderOptions.BitmapScalingMode="Fant"
                                                Source="Icons\pointer.png" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Background="Transparent"
                                                FontSize="16"
                                                Foreground="#999999"
                                                Text="This will open the edit screen for the selected stock." />
                                        </Grid>
                                    </GroupBox>
                                </ToolTip.Content>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </Button>

                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="150"
                        Height="40"
                        Margin="10,0,10,0"
                        Command="{Binding DataContext.SwitchViewAdd, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}, Mode=OneWay}"
                        CommandParameter="{x:Type viewmodel:MainViewModel}"
                        Content="Add Stock"
                        IsEnabled="{Binding EnableAdd}"
                        Style="{StaticResource hollowNormal}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Placement="Mouse"
                                Visibility="{Binding cbTips, Converter={StaticResource boolToVisibility}}">
                                <ToolTip.Content>
                                    <GroupBox
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        Header="Usage Tip">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Grid.Column="0"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                RenderOptions.BitmapScalingMode="Fant"
                                                Source="Icons\pointer.png" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Background="Transparent"
                                                FontSize="16"
                                                Foreground="#999999"
                                                Text="This will open the add/edit stock screen." />
                                        </Grid>
                                    </GroupBox>
                                </ToolTip.Content>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </Button>

                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="150"
                        Height="40"
                        Margin="10,0,10,0"
                        Command="{Binding DataContext.SwitchViewReport, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}, Mode=OneWay}"
                        CommandParameter="{x:Type viewmodel:MainViewModel}"
                        Content="Reports"
                        IsEnabled="True"
                        Style="{StaticResource hollowNormal}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Placement="Mouse"
                                Visibility="{Binding cbTips, Converter={StaticResource boolToVisibility}}">
                                <ToolTip.Content>
                                    <GroupBox
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        Header="Usage Tip">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Grid.Column="0"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                RenderOptions.BitmapScalingMode="Fant"
                                                Source="Icons\pointer.png" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Background="Transparent"
                                                FontSize="16"
                                                Foreground="#999999"
                                                Text="This will show you a report based on the current view." />
                                        </Grid>
                                    </GroupBox>
                                </ToolTip.Content>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </Button>


                    <Button
                        Grid.Row="1"
                        Grid.Column="3"
                        Width="150"
                        Height="40"
                        Margin="10,0,10,0"
                        Command="{Binding DataContext.LookupCommand, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}, Mode=OneWay}"
                        CommandParameter="True"
                        Content="Lookup Stock"
                        IsEnabled="{Binding EnableLookup}"
                        Style="{StaticResource hollowNormal}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Placement="Mouse"
                                Visibility="{Binding cbTips, Converter={StaticResource boolToVisibility}}">
                                <ToolTip.Content>
                                    <GroupBox
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        Header="Usage Tip">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Grid.Column="0"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                RenderOptions.BitmapScalingMode="Fant"
                                                Source="Icons\pointer.png" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Background="Transparent"
                                                FontSize="16"
                                                Foreground="#999999"
                                                Text="This will lookup the selected stock on the Yahoo finace website." />
                                        </Grid>
                                    </GroupBox>
                                </ToolTip.Content>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </Button>

                    <Button
                        Grid.Row="1"
                        Grid.Column="4"
                        Width="150"
                        Height="40"
                        Margin="10,0,10,0"
                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}, Mode=OneWay}"
                        CommandParameter="True"
                        Content="Delete Stock"
                        IsEnabled="{Binding EnableDelete}"
                        Style="{StaticResource hollowNormal}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Placement="Mouse"
                                Visibility="{Binding cbTips, Converter={StaticResource boolToVisibility}}">
                                <ToolTip.Content>
                                    <GroupBox
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        Header="Usage Tip">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Grid.Column="0"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                RenderOptions.BitmapScalingMode="Fant"
                                                Source="Icons\pointer.png" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Background="Transparent"
                                                FontSize="16"
                                                Foreground="#999999"
                                                Text="This will remove the currently selected stock." />
                                        </Grid>
                                    </GroupBox>
                                </ToolTip.Content>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </Button>

                    <Button
                        Grid.Row="1"
                        Grid.Column="5"
                        Width="150"
                        Height="40"
                        Margin="10,0,10,0"
                        Command="{Binding DataContext.SwitchViewConfig, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}, Mode=OneWay}"
                        CommandParameter="{x:Type viewmodel:MainViewModel}"
                        Content="Settings"
                        IsEnabled="True"
                        Style="{StaticResource hollowNormal}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Placement="Mouse"
                                Visibility="{Binding cbTips, Converter={StaticResource boolToVisibility}}">
                                <ToolTip.Content>
                                    <GroupBox
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        Header="Usage Tip">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Grid.Column="0"
                                                Width="20"
                                                Height="20"
                                                HorizontalAlignment="Left"
                                                RenderOptions.BitmapScalingMode="Fant"
                                                Source="Icons\pointer.png" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Background="Transparent"
                                                FontSize="16"
                                                Foreground="#999999"
                                                Text="This will open the system settings screen." />
                                        </Grid>
                                    </GroupBox>
                                </ToolTip.Content>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </Button>


                    <Image
                        Grid.Column="6"
                        Margin="12"
                        HorizontalAlignment="Right"
                        RenderOptions.BitmapScalingMode="Fant"
                        Source="Icons\clipboard_small.png">
                        <Image.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="270"
                                Opacity="0.7"
                                ShadowDepth="1"
                                Color="LightGray" />
                        </Image.Effect>
                    </Image>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
